{
  "name": "toxic-decorators",
  "version": "0.1.0",
  "description": "decorators",
  "main": "lib/toxic-decorators.js",
  "scripts": {
    "test": "jest && nyc report --temp-directory=coverage --reporter=text-lcov | coveralls",
    "start": "jest --coverage --watch",
    "flow": "flow",
    "lint": "flow && eslint ./src --fix",
    "precommit": "npm run lint",
    "prepush": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toxic-johann/toxic-decorators.git"
  },
  "keywords": [
    "decorators"
  ],
  "author": "toxic-johann",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/toxic-johann/toxic-decorators/issues"
  },
  "homepage": "https://github.com/toxic-johann/toxic-decorators#readme",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "coveralls": "^2.13.1",
    "eslint": "^4.0.0",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-jest": "^20.0.3",
    "flow-bin": "^0.48.0",
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "nyc": "^11.0.2",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-watch": "^4.0.0"
  },
  "jest": {
    "modulePaths": [
      "src"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "bower_components"
    ],
    "transform": {
      ".*": "babel-jest"
    }
  }
}
